# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                          controllers.AppController.index

# Cities
GET        /city/:c                   controllers.CityController.find(c: Long)

# Territories
GET        /territory/:t/start        controllers.TerritoryController.startTournament(t: Long)
GET        /territory/:t              controllers.TerritoryController.find(t: Long)

# Tournaments
GET        /tournament/:t             controllers.TournamentController.find(t: Long)

# Static resources
GET        /assets/*file              controllers.Assets.at(path="/public", file)
