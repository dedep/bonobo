# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                                     controllers.Application.index

# Cities
GET        /city/:c                              controllers.CityController.find(c: Long)

# Territories
GET        /territory/:t/start_tournament        controllers.TerritoryController.startTournament(t: Long)
GET        /territory/:t                         controllers.TerritoryController.find(t: Long)

# Static resources
GET        /assets/*file                         controllers.Assets.at(path="/public", file)
